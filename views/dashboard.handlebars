<div class="row">
  <div class="col-auto">
    <h2>Welcome {{username}}!</h2>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-5">
    <h3>Create a New Thread:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <input
          class="form-input"
          type="text"
          id="blog-title"
          name="blog-title"
          placeholder="Thread Title"
        />
      </div>

      <div class="form-group">
        <textarea
          class="form-input"
          id="blog-desc"
          name="blog-desc"
          placeholder="Thread Content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
    <div class="col-md-5 blog-list">
      <h3>Current Blogs:</h3>

      {{#each blogs as |blog|}}
        <div class="row mb-3">
          <div class="col-md-6">
            <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
          </div>
          <div class="col-md-3">
            <button class="btn btn-danger" data-id="{{blog.id}}">DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>